<h1>Questions Questions</h1>

<%= form_for :question, url: questions_path do |q|  %>
  <p>
    <%= q.label :question_text %>
    <%= q.text_area :question_text %>
  </p>

  <p>
    <%= q.label :a  %><br>
    <%= q.text_field :answer_a %>
  </p>

  <p>
    <%= q.label :b %><br>
    <%= q.text_field :answer_b %>
  </p>

  <p>
    <%= q.label :c %><br>
    <%= q.text_field :answer_c %>
  </p>

  <p>
    <%= q.label :d %><br>
    <%= q.text_field :answer_d  %>
  </p>

  <p>
    <%= q.submit %>
  </p>
<% end  %>

<%= link_to 'Back', questions_path %>
